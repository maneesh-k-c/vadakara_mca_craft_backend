<!DOCTYPE html>
<html>
<%- include('./modules/head') %>

    <body class="skin-blue">
        <div class="wrapper">

            <%- include('./modules/header') %>

                <%- include('./modules/sidebar') %>

                    <!-- Right side column. Contains the navbar and content of the page -->
                    <div class="content-wrapper">
                        <!-- Content Header (Page header) -->
                        <section class="content-header">
                            <% if(student.length!=0){ if(student[0].status==2){ %>

                                <h1>
                                    Rejected students list</h1>

                                <%} else {%>
                                    <h1>
                                        All students
                                    </h1>
                                    <%} }%>
                          
                            <ol class="breadcrumb">
                                <li><a href="/admin/"><i class="fa fa-dashboard"></i> Dashboard</a></li>
                                <li class="active">Students</li>
                            </ol>
                        </section>

                        <!-- Main content -->
                        <section class="content">
                            <div class="row">

                                <div class="container">
                                    <div class="box" style="margin-top: 30px;">
                                        <div class="box-header" style="text-align: center;">
                                            <% if(student.length!=0){ if(student[0].status==2){ %>

                                                <h3 class="box-title"
                                                    style="font-weight: 800; color: rgb(130, 130, 232);">
                                                    Rejected students list</h3>

                                                <%} else {%>
                                                    <h3 class="box-title"
                                                        style="font-weight: 800; color: rgb(130, 130, 232);">
                                                        Registered students list</h3>
                                                    <%} }else{%>
                                                        <h3 class="box-title"
                                                        style="font-weight: 800; color: rgb(130, 130, 232);">
                                                        Students list</h3>
                                                        <%} %>
                                        </div><!-- /.box-header -->
                                        <div class="box-body no-padding">
                                            <table class="table table-striped">
                                                <tr>
                                                    <th style="width: 10px">#</th>
                                                    <th>Name</th>
                                                    <th>Mobile</th>
                                                    <th>Email</th>
                                                    <th>Address</th>
                                                    <th>Action</th>
                                                </tr>
                                                <% if(student.length!=0){ for(i=0;i<student.length;i++){%>

                                                    <tr>
                                                        <td>
                                                            <%=i+1%>
                                                        </td>
                                                        <td>
                                                            <%= student[i].name%>
                                                        </td>
                                                        <td>
                                                            <%= student[i].mobile%>
                                                        </td>
                                                        <td>
                                                            <%= student[i].email%>
                                                        </td>
                                                        <td>
                                                            <%= student[i].address%>
                                                        </td>
                                                        <td>
                                                            <%if(student[i].status=='0') {%>
                                                                <a class="btn btn-success"
                                                                    href="/admin/update-student/<%= student[i].login_id%>">Approve</a>&nbsp;&nbsp;
                                                                <a class="btn btn-danger"
                                                                    href="/admin/reject-student/<%= student[i].login_id%>">Reject</a>
                                                                <%}else if(student[i].status==1){ %>
                                                                    <a class="btn btn-danger"
                                                                        href="/admin/delete-student/<%= student[i].login_id%>">Delete</a>&nbsp;&nbsp;
                                                                   
                                                                    <%} else{%>
                                                                        <a class="btn btn-danger"
                                                                        href="/admin/delete-student/<%= student[i].login_id%>">Delete</a>&nbsp;&nbsp;
                                                                    <a class="btn btn-success"
                                                                        href="/admin/restore-student/<%= student[i].login_id%>">Restore</a>
                                                                        <%}%>
                                                        </td>
                                                    </tr>

                                                    <%} }else{ %>

                                                        <td colspan="6"
                                                            style="padding-top: 45px; text-align: center; font-size: large; height: 120px;">
                                                            No data found
                                                        </td>
                                                        <% }%>%>

                                            </table>
                                        </div><!-- /.box-body -->
                                    </div>
                                </div>




                            </div>
                    </div>

                    </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">

            </div>

        </footer>
        </div><!-- ./wrapper -->

        <!-- jQuery 2.1.3 -->
        <script src="../../plugins/jQuery/jQuery-2.1.3.min.js"></script>
        <!-- Bootstrap 3.3.2 JS -->
        <script src="../../bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
        <!-- Slimscroll -->
        <script src="../../plugins/slimScroll/jquery.slimscroll.min.js" type="text/javascript"></script>
        <!-- FastClick -->
        <script src='../../plugins/fastclick/fastclick.min.js'></script>
        <!-- AdminLTE App -->
        <script src="../../dist/js/app.min.js" type="text/javascript"></script>
        <!-- AdminLTE for demo purposes -->
        <script src="../../dist/js/demo.js" type="text/javascript"></script>
    </body>

</html>